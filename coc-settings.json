{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "graphql",
    "xml",
    "html",
    "yaml",
    "json",
    "python",
    "groovy",
    "java"
  ],
  "snippets.ultisnips.directories": ["UltiSnips", "~/.vim/utils/snips"],
  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
  "markdownlint.config": {
    "line_length": false
  },
  "java.enabled": true
}
